              .row
                h5 IPA
                .form-group.col-sm-2
                  input.form-control.req#ipa1(type="text", name="ipa1", placeholder="Sem 1", required)
                .form-group.col-sm-2
                  input.form-control.req#ipa2(type="text", name="ipa2", placeholder="Sem 2", required)
                .form-group.col-sm-2
