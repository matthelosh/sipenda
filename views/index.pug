              h3 Nilai Ujian Nasional

              .row
                .form-group.col-sm-3
                  input.form-control.req#bidUn(type="text", name="bidUn", placeholder="NUN B Indo", required)
                .form-group.col-sm-3
                  input.form-control.req#mtkUn(type="text", name="mtkUn", placeholder="NUN Matematik", required)
                .form-group.col-sm-3
